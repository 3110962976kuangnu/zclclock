<Window x:Class="zclclock.alarmwindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:zclclock"
        mc:Ignorable="d"
        Title="alarmwindow" Height="200" Width="300" WindowStartupLocation="CenterOwner" Topmost="True" ResizeMode="NoResize" Icon="clock_128px_1277394_easyicon.net.ico">
    <Window.Background>
        <SolidColorBrush Color="White"/>
    </Window.Background>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center" x:Name="text"> a</TextBlock>
        <Button Grid.Column="0" Grid.Row="1" Margin="10" Content="别闹了" Click="ok_click"/>
        <Button Grid.Column="1" Grid.Row="1" Margin="10" Content="等会儿再闹" Click="no_clcik"></Button>
    </Grid>
</Window>
